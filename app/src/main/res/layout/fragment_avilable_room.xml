<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".avilable_room"
    android:orientation="vertical"
    >

    <TextView
        android:textColor="@color/black"
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/available_rooms"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/no_room_textview"
        android:textSize="25sp"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_room_avilable_between_8_00_9_30" />
    <LinearLayout
        android:padding="2sp"
        android:background="@drawable/edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/present_room_view_group"
        >

        <ListView


            android:id="@+id/listview_head"
            android:layout_width="match_parent"
            android:layout_height="135dp"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            tools:listitem="@layout/avilable_room_item" />


    </LinearLayout>
    <View
        android:layout_marginTop="15dp"
        android:id="@+id/temp_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/underline"
        android:layout_marginBottom="10sp"
        />
    <ListView
        android:background="@drawable/edit"
        android:padding="3sp"
        android:id="@+id/avilable_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:listitem="@layout/avilable_room_item" />

</LinearLayout>